                    },
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "type": "text/javascript",
                                "exec": [
                                    "pm.test('204 No Content', ()=> pm.response.code === 204);"
                                ]
                            }
                        }
                    ]
                }
            ]
        },
